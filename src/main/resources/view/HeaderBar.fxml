<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<HBox fx:id="headerBar" alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="56.0" prefWidth="1300.0" spacing="10.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HeaderBarController">
   <children>
      <ImageView fx:id="headerBarLogoImage" fitHeight="75.0" fitWidth="300.0" onMouseClicked="#clickHomeLogo" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/Campus Mart Logo.png" />
         </image>
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <ComboBox id="categoriesDropdown" fx:id="headerBarCategoryDropdown" prefHeight="26.0" prefWidth="150.0" promptText="Categories">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <HBox.margin>
            <Insets top="20.0" />
         </HBox.margin></ComboBox>
      <Region prefHeight="88.0" prefWidth="50.0" HBox.hgrow="ALWAYS" />
      <TextField id="searchBar" fx:id="headerBarSearchBar" onKeyReleased="#searchItems" prefHeight="26.0" prefWidth="229.0" promptText="What can we help you find?">
         <HBox.margin>
            <Insets top="20.0" />
         </HBox.margin>
      </TextField>
      <ImageView fx:id="headerBarAccountImage" fitHeight="20.0" fitWidth="20.0" onMouseClicked="#clickAccountImage" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/account_icon_placeholder.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <HBox.margin>
            <Insets top="20.0" />
         </HBox.margin>
      </ImageView>
      <ImageView fx:id="headerBarCartImage" fitHeight="32.0" fitWidth="47.0" onMouseClicked="#clickCartImage" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/cart_icon_placeholder.png" />
         </image>
         <HBox.margin>
            <Insets right="20.0" top="20.0" />
         </HBox.margin>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
   </children>
   <padding>
      <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
   </padding>
   <stylesheets>
      <URL value="@../css/header-bar-styles.css" />
   </stylesheets>
</HBox>
